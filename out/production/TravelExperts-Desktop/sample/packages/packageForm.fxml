<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="ID" />
      <TextField fx:id="txtPackageId" disable="true">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></TextField>
      <Label layoutX="10.0" layoutY="10.0" text="Name" />
      <TextField fx:id="txtPkgName" layoutX="10.0" layoutY="27.0">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></TextField>
      <Label text="Description" />
      <TextArea fx:id="txtPkgDesc" prefHeight="42.0" prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></TextArea>
      <Label text="Start" />
      <HBox spacing="5.0">
         <children>
            <DatePicker fx:id="dpPkgStartDate" />
            <Button fx:id="btnClearStartDate" text="X" />
         </children>
      </HBox>
      <Label layoutX="10.0" layoutY="153.0" text="End" />
      <HBox layoutX="20.0" layoutY="195.0" spacing="5.0">
         <children>
            <DatePicker fx:id="dpPkgEndDate" />
            <Button fx:id="btnClearEndDate" text="X" />
         </children>
      </HBox>
      <Label layoutX="10.0" layoutY="52.0" text="Base Price" />
      <TextField fx:id="txtPkgBasePrice" layoutX="10.0" layoutY="27.0">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </TextField>
      <Label layoutX="10.0" layoutY="262.0" text="Commission" />
      <TextField fx:id="txtPkgAgencyCommission" layoutX="10.0" layoutY="237.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
